<?xml version="1.0" encoding="UTF-8"?>
<NewReleaseMessage xmlns="http://ddex.net/xml/ern/43"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
                   xsi:schemaLocation="http://ddex.net/xml/ern/43 http://service.ddex.net/xml/ern/43/release-notification.xsd" 
                   AvsVersionId="4.3" 
                   LanguageAndScriptCode="en">
    <!--1. Report deals are not allowed in a NewReleaseMessage.
        You need use the UpdateRelease to report the deals
    -->

    <!--1. MessageHeader contains
    MessageID: A unique identifier for the message.
    MessageCreatedDateTime: The date and time when the message was created.
    MessageSender: Information about the sender of the message.
    MessageRecipient: Information about the recipient of the message. 
    -->
    <MessageHeader>
        <MessageId>MSG12345-01</MessageId>
        <MessageCreatedDateTime>2024-06-27T10:00:00Z</MessageCreatedDateTime>
        <MessageSender>
            <PartyId>PADPIDA2014120301</PartyId>
            <PartyName>
                <FullName>Example Sender</FullName>
            </PartyName>
        </MessageSender>
        <MessageRecipient>
            <PartyId>PA-DPIDA-2024072201-A</PartyId>
            <PartyName>
                <FullName>Original Works</FullName>
            </PartyName>
        </MessageRecipient>
    </MessageHeader>

    <!-- 2. ReleaseList contains
    ReleaseType: Indicate the type of release (e.g., Album, Single, etc.).
    ReleaseID: A unique identifier for the release (e.g., a Global Release Identifier - GRid).
    ReleaseTitle: The title of the release.
    ReleaseLabel: The label or organization responsible for the release.
    -->
    <ReleaseList>
        <Release>
            <!--ReleaseId fields:
            ProprietaryId:  A unique identifier assigned by the sender or an internal system. Used internally within the organization that is sending the message.
            GlobalReleaseId (GRid): A globally unique identifier for identifying a release across different organizations and systems worldwide.
            ICPN (International Standard Recording Code): Can be a EAN (13 or 8 digits) or an UPC (12 digits).
            CatalogNumber: A catalog number assigned by the record label or distributor.
            -->
            <ReleaseId>
                <ProprietaryId>REL12345</ProprietaryId> <!-- Optional -->
                <GlobalReleaseId>GRid::G123456789012345678</GlobalReleaseId> <!-- Compulsory -->
                <ICPN>1234567890123</ICPN> <!-- Compulsory -->
                <CatalogNumber>CAT12345</CatalogNumber> <!-- Optional -->
            </ReleaseId>
            <!-- OPTIONAL TO DO IT BY TERRITORY. IF NOT ITS JUST <ReleaseDetails> -->
            <ReleaseDetailsByTerritory>
                <TerritoryCode>Worldwide</TerritoryCode>
                <Title>
                    <TitleText>Example Release</TitleText>
                </Title>
                <Artist>
                    <PartyName>
                        <FullName>Example Artist</FullName>
                    </PartyName>
                </Artist>
                <LabelName>Example Label</LabelName>
                <Genre>
                    <GenreText>Pop</GenreText>
                </Genre>
                <ParentalWarningType>NotExplicit</ParentalWarningType>
                <TechnicalDetails>
                    <!-- Adding Cover Image as a Resource -->
                    <ResourceGroup>
                        <Resource>
                            <ImageResource>
                                <ImageId>
                                    <ProprietaryId>IMG12345</ProprietaryId>
                                </ImageId>
                                <ImageType>FrontCoverImage</ImageType>
                                <Title>
                                    <TitleText>Example Cover Image</TitleText>
                                </Title>
                                <ImageDetailsByTerritory>
                                    <TerritoryCode>Worldwide</TerritoryCode>
                                    <Locator>
                                        <URL>http://ipfs.original.works/CID</URL>
                                    </Locator>
                                </ImageDetailsByTerritory>
                            </ImageResource>
                        </Resource>
                    </ResourceGroup>
                    <!-- 3. Sound Recording Details
                         SoundRecordingID: A unique identifier for the sound recording.
                         ISRC: The new ISRC assigned to the sound recording.
                         SoundRecordingTitle: The title of the sound recording.
                         Artists: Information about the artists involved in the sound recording.
                         RightsController: Information about the entity controlling the rights to the sound recording.
                    -->
                    <SoundRecording>
                        <SoundRecordingId> <!-- Compulsory -->
                            <ISRC>US1234567890</ISRC>
                            <ISCC>ISCC:KEC37BNSAEG5UGZOQGP4RB4J4SOOPSLAIL74KIXPQWGN3PZIILZ2YPI</ISCC>
                        </SoundRecordingId>

                        <!-- Rights of the ISRC
                        The RightController can be defined for the entire Resource with the field "ResourceRightsController" or for a specific RightShare with the field "RightController".
                        RightController is more granular and specific to particular rights within the RightShare section. It defines the entity that controls a specific type of right (e.g., mechanical, performing, reproduction) associated with the resource or musical work.
                        -->
                        <ResourceRightsController> <!-- Compulsory -->
                            <PartyId>PADPIDA2014120301</PartyId>
                            <PartyName>
                                <FullName>Example Rights Holder</FullName>
                            </PartyName>
                        </ResourceRightsController>
                        
                        <RightsCoverage> <!-- Compulsory -->
                            <RightShare>
                                <RightShareProprietaryId>ISRC-12345</RightShareProprietaryId>
                                <!-- Elements within RightController:
                                PartyID: Uunique identifier for the party controlling the rights.
                                PartyName: The name of the party controlling the rights.
                                RightControllerName: Specifies the role or function of the party in terms of rights control. sed to describe the type of control the party has over the rights, such as whether they are a publisher, rights administrator, etc.
                                -->
                                <RightController>
                                    <RightControllerName>MusicLabel</RightControllerName>
                                    <PartyID>PR789012</PartyID>
                                    <PartyName>MusicPublisher</PartyName>
                                </RightController>
                                <RightType>Reproduction</RightType>
                                <RightType>MakeAvailableRight</RightType>
                            </RightShare>
                        </RightsCoverage>

                        <Title> <!-- Optional -->
                            <TitleText>Example Sound Recording</TitleText>
                        </Title>
                        <DisplayArtist> <!-- Optional -->
                            <PartyName>
                                <FullName>Example Artist</FullName>
                            </PartyName>
                        </DisplayArtist>
                        <Duration>PT3M30S</Duration> <!-- Optional -->
                        <MarketingInformation><!-- Optional -->
                            <ReleaseDate>2024-07-01</ReleaseDate>
                        </MarketingInformation>
                        <ResourceDetailsByTerritory> <!-- Optional -->
                            <TerritoryCode>Worldwide</TerritoryCode>
                            <MusicalWorkId>
                                <ISWC>T-123.456.789.Z</ISWC>
                            </MusicalWorkId>
                            <!-- The URL for the sound recording -->
                            <Locator>
                                <URL>filename1.wav</URL>
                            </Locator>
                            <!-- Using ResourceAnnotation to note verification tests like ACRCloud-->
                            <ResourceAnnotation>
                                <AnnotationType>Verifier</AnnotationType>
                                <AnnotationCreator>ACRCloud</AnnotationCreator>
                                <AnnotationText>Passed</AnnotationText>
                                <AnnotationDate>2024-06-27</AnnotationDate>
                            </ResourceAnnotation>  
                        </ResourceDetailsByTerritory>
                    </SoundRecording>
                </TechnicalDetails>
            </ReleaseDetailsByTerritory>
        </Release>
    </ReleaseList>


</NewReleaseMessage>
